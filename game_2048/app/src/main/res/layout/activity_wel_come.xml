<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1DEBD4">

    <TextView
        android:id="@+id/textViewGame2048"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="75dp"
        android:gravity="center"
        android:text="Game 2048"
        android:textSize="40sp"
        android:textColor="#000000"/>

    <CheckBox
        android:id="@+id/checkBoxGioiHanDiem"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartPreviousGame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="321dp"
        android:text="không giới hạn điểm"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGame2048"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Bắt Đầu"
        android:textColor="#000000"
        android:textSize="30sp"
        android:background="#7C15A594"/>
    <Button
        android:id="@+id/btnStartPreviousGame"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartGame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Chơi Tiếp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:background="#7C15A594"/>

</RelativeLayout>